{
  "name": "genshell",
  "version": "1.1.0-alpha.2",
  "description": "A command-line interface (CLI) tool that utilizes Google's GeminiAPI  to generate shell commands from natural language descriptions",
  "main": "./dist/index.js",
  "bin": {
    "genshell": "./dist/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "node postBuild.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "precommit": "lint-staged"
  },
  "keywords": [
    "gemini",
    "shell",
    "ai",
    "tools",
    "genshell"
  ],
  "author": "@mostafa-drz",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.9.0",
    "commander": "^12.0.0"
  }
}
